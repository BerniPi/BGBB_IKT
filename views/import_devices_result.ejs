<%- include('partials/header') %>
<%- include('partials/navbar', { page }) %>

<div class="container py-4">
  <div class="card shadow-sm">
    <div class="card-header">
      <h5 class="mb-0"><i class="bi bi-check2-circle me-2"></i> Import abgeschlossen</h5>
    </div>
    <div class="card-body">
      <div class="row g-3">
        <div class="col-md-4">
          <div class="p-3 border rounded">
            <div class="fw-bold">Geräte neu angelegt:</div>
            <div class="display-6"><%= created %></div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="p-3 border rounded">
            <div class="fw-bold">Geräte aktualisiert:</div>
            <div class="display-6"><%= updated %></div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="p-3 border rounded">
            <div class="fw-bold">Raum-Historie Einträge:</div>
            <div class="display-6"><%= historyCreated %></div>
          </div>
        </div>
      </div>

      <hr>

      <div class="row g-3">
        <div class="col-md-4">
          <div class="p-3 border rounded">
            <div class="fw-bold">Modelle neu:</div>
            <div class="display-6"><%= modelsCreated %></div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="p-3 border rounded">
            <div class="fw-bold">Kategorien neu:</div>
            <div class="display-6"><%= categoriesCreated %></div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="p-3 border rounded">
            <div class="fw-bold">Räume neu:</div>
            <div class="display-6"><%= roomsCreated %></div>
          </div>
        </div>
      </div>

      <% if (problems && problems.length) { %>
        <hr>
        <h6>Hinweise / Probleme</h6>
        <ul class="text-warning">
          <% problems.forEach(p => { %>
            <li><%= p %></li>
          <% }) %>
        </ul>
      <% } %>

      <div class="mt-4">
        <a href="/api/devices/import" class="btn btn-outline-primary">Neuen Import starten</a>
        <a href="/devices" class="btn btn-secondary ms-2">Zurück zur Übersicht</a>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
